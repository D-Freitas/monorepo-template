{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "cache": true,
      "outputs": ["apps/**/out/**"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "test": {
      "cache": true,
      "inputs": ["**/*.js", "**/*.json", "**/*.spec.js", "**/*.test.js"]
    },
    "fix": {
      "cache": true,
      "outputs": ["apps/**/**/*.js"]
    },
    "lint": {
      "cache": true,
      "inputs": ["**/*.js", "**/*.json", "biome.json"]
    }
  }
}
